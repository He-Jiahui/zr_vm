{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Zr",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#decorators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.zr",
          "match": "//.*$"
        },
        {
          "name": "comment.block.zr",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.zr",
          "match": "\\b(if|else|switch|case|default|while|for|break|continue|return|try|catch|finally|throw)\\b"
        },
        {
          "name": "keyword.other.zr",
          "match": "\\b(module|struct|class|interface|enum|intermediate|var|const|static|pub|pri|pro|new|super|in|out|get|set|test)\\b"
        },
        {
          "name": "constant.language.zr",
          "match": "\\b(true|false|null|Infinity|NegativeInfinity|NaN)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "string.quoted.double.zr",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.zr",
              "match": "\\\\[nrtbf\"'\\\\]|\\\\x[0-9a-fA-F]{2}|\\\\u[0-9a-fA-F]{4}"
            }
          ]
        },
        {
          "name": "string.quoted.single.zr",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.zr",
              "match": "\\\\[nrtbf\"'\\\\]|\\\\x[0-9a-fA-F]{2}|\\\\u[0-9a-fA-F]{4}"
            }
          ]
        },
        {
          "name": "constant.numeric.hex.zr",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.zr",
          "match": "\\b0[0-7]+\\b"
        },
        {
          "name": "constant.numeric.float.zr",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?[fFdD]?\\b|\\b\\d+[eE][+-]?\\d+[fFdD]?\\b"
        },
        {
          "name": "constant.numeric.integer.zr",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.zr",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.zr",
          "match": "[+\\-*/%]?="
        },
        {
          "name": "keyword.operator.comparison.zr",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.zr",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.zr",
          "match": "[&|^~]|<<|>>"
        },
        {
          "name": "keyword.operator.other.zr",
          "match": "\\?|:|=>|\\.\\.\\.|\\."
        },
        {
          "name": "keyword.operator.special.zr",
          "match": "[@#$]"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.zr",
          "match": "\\b(Int|Float|Double|Bool|Char|String|Void|Any|Object)\\b"
        },
        {
          "name": "entity.name.type.zr",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.zr",
          "match": "\\b[a-z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "punctuation.definition.decorator.zr",
          "match": "#",
          "patterns": [
            {
              "name": "entity.name.function.decorator.zr",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.zr"
}
